unit MonolitoFinanceiro.View.Principal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus;

type
  TFrm_Principal = class(TForm)
    MainMenu: TMainMenu;
    main_cadastros: TMenuItem;
    main_relatorios: TMenuItem;
    main_ajuda: TMenuItem;
    mnu_cadastro_padrao: TMenuItem;
    procedure mnu_cadastro_padraoClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_Principal: TFrm_Principal;

implementation

uses
  MonolitoFinanceiro.View.CadastroPadrao,
  MonolitoFinanceiro.View.Splash;

{$R *.dfm}

procedure TFrm_Principal.FormCreate(Sender: TObject);
begin

  Frm_Splash := TFrm_Splash.Create(Nil);

  try
     Frm_Splash.ShowModal;
  finally
      FreeAndNil(Frm_Splash);
  end;

end;

procedure TFrm_Principal.mnu_cadastro_padraoClick(Sender: TObject);
begin
    Frm_CadastroPadrao.Show;
end;

end.
